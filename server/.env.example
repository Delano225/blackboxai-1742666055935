# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Client URL (for CORS)
CLIENT_URL=http://localhost:3000

# MongoDB Database
MONGODB_URI=mongodb://localhost:27017/vendyx
TEST_MONGODB_URI=mongodb://localhost:27017/vendyx_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Stripe Payment Gateway
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Email Configuration (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
EMAIL_FROM=noreply@vendyx.com

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Cloud Storage
STORAGE_PROVIDER=aws  # aws, gcp, or azure
STORAGE_BUCKET=your-storage-bucket-name
STORAGE_REGION=your-storage-region
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Logging
LOG_LEVEL=debug  # debug, info, warn, error

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_CRYPTO_PAY=true
ENABLE_LIVE_CHAT=true

# API Version
API_VERSION=v1

# Socket.IO Configuration
SOCKET_PATH=/socket.io

# Third-party Service Integration Keys
# Add any additional third-party service keys here

